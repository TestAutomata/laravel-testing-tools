{
    "name": "illuminated/testing-tools",
    "description": "Provides Laravel-specific testing helpers and asserts.",
    "keywords": ["laravel", "testing", "helpers", "asserts"],
    "license": "MIT",
    "authors": [
        {
            "name": "Dmitry Ivanov",
            "email": "dmitry.g.ivanov@gmail.com"
        }
    ],
    "require": {
        "php": ">=5.5.9",
        "illuminate/support": "5.1.*|5.2.*|5.3.*|5.4.*",
        "mockery/mockery": "^0.9"
    },
    "require-dev": {
        "phpunit/phpunit": "^5.0",
        "orchestra/testbench": "^3.1",
        "orchestra/database": "^3.1"
    },
    "autoload": {
        "psr-4": {
            "Illuminated\\Testing\\": "src/"
        }
    },
    "autoload-dev": {
        "classmap": [
            "tests/TestCase.php",
            "tests/fixture/app"
        ]
    }
}
